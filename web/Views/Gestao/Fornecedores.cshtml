@model IEnumerable<mktSystem.Models.Fornecedor>
@{
    Layout = "_AdmLayout";
}
<h2>Fornecedores</h2>
<hr>
<a asp-action="NovoFornecedor" asp-controller="Gestao" class="btn btn-success">Novo Fornecedor</a>
<hr>

<script>
     $(document).ready( function () {
        $('#thForn').DataTable();
    }); 
</script>

<table id="thForn" class="table table-striped table-bordred">
    <thead>
        <td>Id</td>
        <td>Nome</td>
        <td>Email</td>
        <td>Telefone</td>
        <td>Ações</td>
    </thead>
    <tbody>
        @foreach (var fornecedor in Model)
        {
            <tr>
                <td>@fornecedor.Id</td>
                <td>@fornecedor.Nome</td>
                <td>@fornecedor.Email</td>
                <td>@fornecedor.Telefone</td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarFornecedor/@fornecedor.Id">Editar</a>
                    <form asp-action="Deletar" asp-controller="Fornecedor" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@fornecedor.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>