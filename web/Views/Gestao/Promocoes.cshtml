@model IEnumerable<mktSystem.Models.Promocao>
@{
    Layout = "_AdmLayout";
}
<h2>Promoções</h2>
<hr>
<a asp-action="NovaPromocao" asp-controller="Gestao" class="btn btn-success">Nova Promoção</a>
<hr>

<script>
     $(document).ready( function () {
        $('#thPromocao').DataTable({
            "language": {
            "lengthMenu": "Mostrando _MENU_ registros por página",
            "zeroRecords": "Nenhum registro encontrado",                    
            "search": "Buscar:",
            "info": "Mostrando _PAGE_ de _PAGES_",
            "paginate": {
                "first": "Primeiro",
                "next": "Próximo",
                "previous": "Anterior",
                "last": "Último"
                }
            }
        });
    }); 
</script>

<table id="thPromocao" class="table table-striped table-bordred">
    <thead>
        <td>Id</td>
        <td>Nome</td>
        <td>Produto</td>
        <td>Porcentagem</td>
        <td>Ações</td>
    </thead>
    <tbody>
         @foreach (var promocao in Model)
        {
            <tr>
                <td>@promocao.Id</td>
                <td>@promocao.Nome</td>
                <td>@promocao.Produto.Nome</td>
                <td>@promocao.Porcentagem%</td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarPromocao/@promocao.Id">Editar</a>
                    <form asp-action="Deletar" asp-controller="Promocao" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@promocao.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>