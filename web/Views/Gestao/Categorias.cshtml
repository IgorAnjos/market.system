@model IEnumerable<mktSystem.Models.Categoria>

@{
    Layout = "_AdmLayout";
}
<h2>Categorias</h2>
<hr>
<a asp-action="NovaCategoria" asp-controller="Gestao" class="btn btn-success">Nova Categoria</a>
<hr>
<script>
     $(document).ready( function () {
        $('#thCatego').DataTable();
    }); 
</script>

<table id="thCatego" class="table table-striped table-bordred">
    <thead>
        <td>Id</td>
        <td>Nome</td>
        <td>Ações</td>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarCategoria/@categoria.Id">Editar</a>
                    <form asp-action="Deletar" asp-controller="Categoria" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@categoria.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>